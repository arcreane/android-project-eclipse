<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header Title -->
        <TextView
            android:id="@+id/resultHeading"
            android:text="ðŸŒ¸ Your Wellness Insight"
            android:textSize="24sp"
            android:textColor="#8E24AA"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Period Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card_bg"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="18dp">

            <TextView
                android:id="@+id/nextPeriodText"
                android:text="Next Period: --"
                android:textColor="#D81B60"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dayOfCycleText"
                android:text="Day of Cycle: --"
                android:textColor="#6A1B9A"
                android:textSize="17sp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/ovulationInfoText"
                android:text="Ovulation Info"
                android:textColor="#E91E63"
                android:textSize="17sp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Mood & Fertility Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card_bg"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="18dp">

            <TextView
                android:id="@+id/moodText"
                android:text="Mood: --"
                android:textColor="#3949AB"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fertilityText"
                android:text="Fertility: --"
                android:textColor="#43A047"
                android:textSize="17sp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Health Tip Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card_bg"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="18dp">

            <TextView
                android:id="@+id/healthTipText"
                android:text="Tip: --"
                android:textColor="#F57C00"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/viewTipsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¼ View Personalized Tips"
                android:layout_marginTop="24dp"
                android:backgroundTint="#F48FB1"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
